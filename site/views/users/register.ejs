    <main class="logReg2">
        <div class="login-container">
            <div class="login-box">
                <h2>Regístrate</h2>

                        <!-- form method post y multer -->
                <form method="post" enctype="multipart/form-data"> 
                    <div class="user-box">
                        <input type="text" name="nombre" >
                        <label>Nombre</label>
                        <small>Debe ingresar su nombre</small>
                    </div>
                    <div class="user-box">
                        <input type="text" name="apellido" >
                        <label>Apellido</label>
                        <small>Debe ingresar un email valido</small>
                    </div>
                    <div class="user-box">
                        <input type="email" name="email" >
                        <label>Email</label>
                        <small>Debe ingresar un email</small>
                    </div>
                    <div class="user-box">
                        <input type="password" name="password" >
                        <label>password</label>
