<header>
    <div class="top">
        <div class="logo">
            <a href="/">
                <img src="/img/logo_blanco_png.png" alt="">
            </a>
        </div>
    </div>
    <div class="burger">
        <input type="checkbox" name="burger" id="burger" checked>
        <label for="burger"><i class="fas fa-ellipsis-v"></i></label>
        <nav>
            <ul class="menu">
                <li><a href="/carta">Carta</a></li>
                <li><a href="/Promociones">Promociones</a></li>
                <li><a href="/nosotros">Conocenos</a></li>
                                
            <% if (locals.userLogin && locals.userLogin.roll === 'Admin') { %>
                <li><a id="admin" href="/admin/listarProducts">Admin</a></li>
                <% } %>

            </ul>
            <ul class="user">
                
                <% if (locals.userLogin) { %>
                    <li><a href="/carrito"><i class="fas fa-shopping-cart"></i></a></li>
                    <li><a href="/users/profile"><%= locals.userLogin.roll %>: <%= locals.userLogin.nombre %> </a></li>
                    <li><div>
                        <form action="/users/logout?_method=DELETE" method="post">
                            <button type="submit"><i class="fas fa-power-off"></i></button>
                        </form>
                    </div></li>
                    <!-- <img class="imgProfile_header" src="/img/users/<%= locals.userLogin.imagen %>" alt=""> -->
                    <% } else { %>
                        <li><a href="/users/login">Login</a></li>
                        <li><a href="/users/register">Registrate</a></li>

                <% } %>
            </ul>
        </nav>
    </div>
</header>